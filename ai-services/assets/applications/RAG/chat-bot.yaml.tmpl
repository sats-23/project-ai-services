apiVersion: v1
kind: Pod
metadata:
  name: "{{ .AppName }}--chat-bot"
  labels:
    ai-services.io/application: "{{ .AppName }}"
spec:
  containers:
    - name: ui
      image: icr.io/ai-services-private/rag-base:v0.0.1
      command:
        - "sleep"
        - "infinity"
      resources:
        requests:
          memory: "10Gi"
        limits:
          memory: "10Gi"
      volumeMounts:
        - mountPath: /project-ai-services
          name: codebase
  volumes:
    - name: codebase
      hostPath:
        path: "/var/lib/ai-services/{{ .AppName }}/project-ai-services"
        type: DirectoryOrCreate
